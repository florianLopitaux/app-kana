<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<fx:root type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
         prefWidth="1280" prefHeight="720" alignment="CENTER" spacing="7">

    <Label fx:id="textResult" textAlignment="CENTER"/>
    <Label fx:id="msgReward">
        <padding>
            <Insets bottom="30"/>
        </padding>
    </Label>

    <HBox alignment="CENTER" spacing="35">
        <Button fx:id="returnButton" onAction="#onReturnHomeButtonClick" text="Return Home"/>
        <Button fx:id="retryButton" onAction="#onRetryButtonClick" text="Retry"/>
    </HBox>

</fx:root>
